<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaykayitare.journeyapp.Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cohort 1"
        android:id="@+id/cohort1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#00c853"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cohort2"
        android:id="@+id/cohort2"
        android:layout_below="@+id/cohort1"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/cohort1"
        android:layout_alignEnd="@+id/cohort1"
        android:background="#00c853"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cohort 3"
        android:id="@+id/cohort3"
        android:layout_below="@+id/cohort2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="#00c853"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cohort 4"
        android:id="@+id/cohort4"
        android:layout_below="@+id/cohort3"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="#00c853"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cohort 5"
        android:id="@+id/cohort5"
        android:layout_below="@+id/cohort4"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="#00c853"
        android:textColor="#ffffff" />

</RelativeLayout>
